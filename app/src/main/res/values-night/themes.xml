<resources>
    <!-- Base application theme. -->
    <style name="Theme.Challenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/vazir_matn</item>
        <item name="fontFamily">@font/vazir_matn</item>

        <item name="header_text">@color/sky_blue</item>
        <item name="header_icons">@color/sky_blue</item>
        <item name="header_background">@color/midnight_blue</item>

        <item name="transaction_background">@color/midnight_blue</item>
        <item name="transaction_title_text">@color/sky_blue</item>
        <item name="transaction_description_text">@color/sky_blue_dark</item>
        <item name="transaction_price_text">@color/sky_blue</item>
        <item name="transaction_highlight">@color/teal_dark</item>
        <item name="transaction_active_icon">@color/teal_light</item>
        <item name="transaction_non_active_icon">@color/mid_blue</item>

        <item name="handle_color">@color/sky_blue</item>
    </style>
</resources>